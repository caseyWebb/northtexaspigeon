if !req.param('noLayout')
  include includes/head.jade

////////////////////////////////

#stage
  .row
    .medium-5.columns

      h1.section-header Trending News
      
      each article, index in news.trending

        if index === 0

          .row
            .small-12.columns
              a(href='/article/#{article.slug}'): img(src=article.headlineImg.feature)
              br
              br
            .small-12.columns
              a(href='/article/#{article.slug}')
                h4: strong= article.title
                h6.subheader= article.description

        if index !== 0

          .row
            .small-4.large-4.columns
              a(href='/article/#{article.slug}'): img(src=article.headlineImg.thumb)
            .small-8.large-8.columns
              a(href='/article/#{article.slug}')
                h5= article.title
                h6.subheader= article.description

        if index != 3
          hr

      h1.section-header Latest News

      each article, index in news.latest

        if index === 0

          .row
            .small-12.columns
              a(href='/article/#{article.slug}'): img(src=article.headlineImg.feature)
              br
              br
            .small-12.columns
              a(href='/article/#{article.slug}')
                h4= article.title
                h6.subheader= article.description

        if index !== 0

          .row
            .small-4.large-4.columns
              a(href='/article/#{article.slug}'): img(src=article.headlineImg.thumb)
            .small-8.large-8.columns
              a(href='/article/#{article.slug}')
                h5= article.title
                h6.subheader= article.description

        if index != 3
          hr

    .medium-4.columns

      h1.section-header Columns
      
      each article, index in columns

        if index === 0

          .row
            .small-12.columns
              a(href='/article/#{article.slug}'): img(src=article.headlineImg.feature)
              br
              br
            .small-12.columns
              a(href='/article/#{article.slug}'): h4: strong= article.title
              a(href='/article/#{article.slug}'): h6.subheader= article.description

        if index !== 0

          .row
            .small-12.columns
              a(href='/article/#{article.slug}'): h5= article.title

        if index != 7
          hr


      h1.section-header Videos

      each video, index in videos

        if index === 0

          .row
            .small-12.columns
              a(href='/video/#{video.slug}'): img(src='http://img.youtube.com/vi/#{video.youtubeID}/0.jpg')
              br
              br
            .small-12.columns
              a(href='/video/#{video.slug}'): h4: strong= video.title

        if index !== 0

          .row
            .small-12.columns
              a(href='/video/#{video.slug}'): h5= video.title

        if index != 3
          hr

    .medium-3.columns

      #vertical-ad.show-for-medium-up
      small.text-center
        | Want to advertise on the Pigeon?
        | Send us an email @&nbsp;
        a(href='mailto:advertiseonthe@northtexaspigeon.com' target='_blank') advertiseonthe@northtexaspigeon.com

      hr

      each tag in tags

        a.hashtag(href='/tag/#{tag}')= tag

  .row
    .small-12.columns
        
      h1.section-header.latest-pictures Latest Pictures

      each picture in pictures

        .small-12.medium-3.columns.end
          a(href='/picture/#{picture.slug}'): img(src=picture.image.feature)
          a(href='/picture/#{picture.slug}'): h4: strong= picture.title

          .show-for-small-only
            hr

////////////////////////////////

if !req.param('noLayout')
  include includes/footer.jade