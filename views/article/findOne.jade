if !req.param('noLayout')
  include ../includes/head.jade

////////////////////////////////

#stage
  .row
    
    .medium-8.large-10.columns

      article

        img(src=headlineImg.full)

        h1.title.page-title= title
        strong.description= description

        - var writtenOn = new Date(createdAt); var month = ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'];
        em.by-line #{author.pseudonym} on #{month[writtenOn.getMonth()]} #{writtenOn.getDate()}, #{writtenOn.getFullYear()}

        .content!= html

      hr

      .fb-comments(data-href='#{req.protocol}://#{req.get("host")}/article/#{slug}', data-width='600')

    .medium-4.large-2.columns
      #vertical-ad.show-for-medium-up

  if req.session.user
    #authenticatedUserMessage.show-for-large-up
      strong Hey there,
      |  I noticed you're logged in.
      a.tiny.button.admin-link(href="/admin/article/#{id}", target='_blank').
        Click here to open this article in the admin portal


////////////////////////////////

if !req.param('noLayout')
  include ../includes/footer.jade